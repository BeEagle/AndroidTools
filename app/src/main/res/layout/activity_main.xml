<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rain="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gjson.androidtools.activity.MainActivity">

    <com.gjson.androidtools.commonview.VerticalAutoScrollView
        android:id="@+id/top_autoscrllo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:background="@android:color/holo_orange_light"
        android:layout_gravity="center_vertical"
        android:id="@+id/rxretro_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rxjava_retrofit" />

    <com.gjson.androidtools.commonview.rainview.RainView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ff000000"
        rain:rainNum="300"
        rain:randColor="true"
        rain:size="10" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/just_experience_one"
        android:visibility="gone" />
</LinearLayout>
